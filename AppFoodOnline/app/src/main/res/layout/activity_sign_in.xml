<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#F2F2F2"

    android:orientation="vertical">


    <androidx.cardview.widget.CardView


        android:layout_width="match_parent"

        android:layout_height="730dp"

        android:layout_margin="15dp"

        app:cardCornerRadius="0dp"

        app:cardElevation="5dp">


        <LinearLayout


            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:text="ĐĂNG NHẬP"

                android:textAlignment="center"

                android:textColor="@color/black"

                android:textSize="42dp"

                android:textStyle="bold" />


            <ImageView

                android:layout_width="190dp"

                android:layout_height="188dp"

                android:layout_gravity="center"

                android:layout_marginTop="10dp"

                android:background="@drawable/logo"

                android:textAlignment="center" />


            <TextView

                android:id="@+id/txtadmin"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="Rich Food"

                android:textAlignment="center"

                android:textColor="@color/black"

                android:textSize="40dp"

                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content">


                <EditText

                    android:id="@+id/editEmail"

                    android:layout_width="match_parent"

                    android:layout_height="65dp"

                    android:layout_margin="15dp"

                    android:padding="15dp"

                    android:background="@drawable/bogoc_2"

                    android:drawableRight="@drawable/ic_baseline_email_24"

                    android:hint="Nhập Email"

                    android:singleLine="true"

                    android:textColor="@color/black" />

            </LinearLayout>


            <EditText

                android:id="@+id/editmatkhau"

                android:layout_width="match_parent"

                android:layout_height="65dp"

                android:layout_margin="15dp"

                android:padding="15dp"

                android:background="@drawable/bogoc_2"

                android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"

                android:hint="Nhập Mật Khẩu"

                android:inputType="textPassword"

                android:singleLine="true"

                android:textColor="@color/black" />


            <TextView

                android:id="@+id/forgot_password"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="right"

                android:layout_marginTop="10dp"

                android:layout_marginEnd="10dp"


                android:text="Quên mật khẩu ?"

                android:textColor="@color/black"

                android:textSize="15sp" />


            <Button

                android:id="@+id/btndangnhap"

                android:layout_width="200dp"

                android:layout_height="55dp"

                android:layout_gravity="center"

                android:layout_marginTop="20dp"

                android:layout_marginBottom="5dp"

                android:background="@drawable/button"

                android:elevation="8dp"
                android:text="Đăng Nhập"

                android:textSize="18dp"

                app:backgroundTint="#F19137" />


            <TextView

                android:id="@+id/txtdangky"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginTop="10dp"

                android:layout_marginEnd="5dp"

                android:padding="8dp"

                android:text="Chưa có tài khoản hãy, đăng ký"

                android:textColor="@color/black"

                android:textSize="18dp" />

            <!--<Button

            android:id="@+id/txtdangky"

            android:layout_width="200dp"

            android:layout_height="55dp"

            android:layout_gravity="center"

            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"

            android:background="@drawable/bogoc_button"

            android:elevation="8dp"

            android:text="Đăng Ký" />-->



        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>