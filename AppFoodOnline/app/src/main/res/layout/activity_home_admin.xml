<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#F2F2F2"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="190dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rich Food"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="#f8f8ff"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cHoaDon"
            android:layout_width="0dp"

            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/bill"
                    app:tint="#F19137" />

                <TextView
                    android:id="@+id/txthoadon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Hóa Đơn"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cThongKe"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_baseline_pie_chart_24"
                    app:tint="#F19137" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Thống Kê"
                    android:textColor="@color/black"

                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:background="#f8f8ff"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:id="@+id/cSignOut"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
            <ImageView
                app:tint="@color/colorPrimaryDark"
                android:layout_marginLeft="100dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_logout_24"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Đăng Xuất"
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/imgdangsanpham"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:background="@drawable/icon_add"
                android:layout_gravity="center"
                android:layout_height="90dp"
                android:text="Đăng sản phẩm"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Sản Phẩm"
                android:layout_marginTop="115dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
