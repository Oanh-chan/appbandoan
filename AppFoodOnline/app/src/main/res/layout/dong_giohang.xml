<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_toanbosanpham"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"

        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_gravity="center">
        <ImageView
            android:contentDescription="Xóa"
            android:id="@+id/ib_delete"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_clear_24"
            android:layout_marginLeft="280dp"/>
        <ImageView

            android:id="@+id/hinhanh"
            android:layout_marginTop="35dp"
            android:layout_width="150dp"
            android:layout_height="240dp"
            android:layout_marginLeft="10dp"

            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bogoc_anh"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundimageview"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="190dp">

            <TextView
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:text="Bánh xèo"
                android:id="@+id/txttensp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá tiền: "
                android:textStyle="bold"/>
            <TextView

                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:text="255.555 Đ"
                android:id="@+id/txtgiatien"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:textStyle="bold"/>
            <TextView

                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="1"
                android:id="@+id/txtsoluong"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượng calo: "
                android:textStyle="bold"/>
            <TextView

                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="1"
                android:id="@+id/txtbaohanh"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>